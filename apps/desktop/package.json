{
  "name": "@hisui/desktop",
  "version": "0.2.0",
  "private": true,
  "description": "Hisui â€” Turn books into multi-voice podcasts",
  "author": "Hisui Team",
  "main": "dist/main/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on tcp:127.0.0.1:5173 && npm run build:main && npm run build:preload && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron dist/main/main/main.js",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "package": "npm run build && electron-builder --config electron-builder.yml --mac --arm64",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.preload.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "fast-xml-parser": "^4.5.1",
    "geist": "^1.7.0",
    "lucide-react": "^0.563.0",
    "motion": "^12.34.0",
    "pdf-parse": "^1.1.1",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-h5-audio-player": "^3.10.1",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "34.0.2",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.2"
  }
}
